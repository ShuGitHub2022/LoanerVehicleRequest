        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	var vehicleTracker = current.vehicle; // get the sys_id of the linked vehicle
	
	
	var grServicing = new GlideRecord('x_1311516_loaner_v_vehicle_servicing');
	grServicing.addActiveQuery();
	grServicing.addQuery('vehicle',vehicleTracker);//find if there associated vehiclein servicing table
	grServicing.addQuery('ticket_status','open');//open ticket servicing record
	grServicing.query();
	
	// If no open servicing record is found, create a new one
	if(!grServicing.next()){ 
		//if did not find any record, create a new servicing record
		grServicing.initialize();
		grServicing.vehicle_tracker = current.sys_id;//Use sys_id to reference current record. 
		grServicing.vehicle=vehicleTracker;
		grServicing.vehicle_status = 'in service';
		grServicing.date_sent_for_service = new GlideDate();
		grServicing.ticket_status = 'open';
		grServicing.insert();
	}

})(current, previous);]]></script>
